# EduView - AI Educational Video Analysis
# Environment Configuration

# Gemini AI API Key (required for content analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=eduview

# File Upload Settings
MAX_FILE_SIZE_MB=500
UPLOAD_DIR=uploads

# Analysis Configuration
FRAME_SAMPLE_RATE=30
AUDIO_CHUNK_DURATION=5

# Scoring Weights (should add up to 1.0)
BODY_LANGUAGE_WEIGHT=0.25
VOICE_WEIGHT=0.25
CONTENT_FLOW_WEIGHT=0.25
INTERACTION_WEIGHT=0.25

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
GRADIO_PORT=7860 